<div class="card col-sm-6 mx-auto mt-5">
  <div class="card-body">
    <h3 class="mt-1 mb-3">登録内容変更</h3>
    <%= form_with model: @want, local: true do |f| %>
    <%#= render "devise/shared/error_messages", resource: resource %>
  
     <div class="form-group">
      <%= f.label :title, "何をお探しですか？", :class => "form-label" %>
      <%= f.text_field :title, :class => "form-control" %>
    </div>
 
    <div class="form-group">
      <%= f.label :text, "紹介文", :class => "form-label" %>
      <%= f.text_area :text, :class => "form-control" %>
    </div>
 
    <div class="actions">
      <%= f.submit "内容を変更する", :class => "btn btn-primary btn-block" %>
    </div>
    <% end %>
  </div>
</div>