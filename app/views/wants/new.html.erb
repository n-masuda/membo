<style>
  .card { 
    height:100vh;
    background: url('/images/want-img.jpg') center no-repeat ; 
    background-size: cover;
  }
</style>

<div class="card">
  <div class="col-sm-6 col-md-5 col-lg-4 mx-auto mt-5">
    <div class="text-light card-body">
      <h3 class="mt-1 mb-3">募集情報登録</h3>
      <%= form_with model: @want, url: wants_path, local: true do |f| %>
      <%= render "devise/shared/error_messages", model: f.object %>
    
      <div class="form-group ">
        <%= f.label :title, "何をお探しですか？", :class => "form-label" %>
        <%= f.text_field :title, :class => "form-control" %>
      </div>
  
      <div class="form-group">
        <%= f.label :text, "紹介文", :class => "form-label" %>
        <%= f.text_area :text, size: "50x10", :class => "form-control" %>
      </div>
  
      <div class="form-group">
        <%= f.label :img, "画像", :class => "form-label" %>
        <%= f.file_field :img, :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :movie, "動画", :class => "form-label" %>
        <%= f.file_field :movie, :class => "form-control" %>
      </div>


    <div class=" d-flex justify-content-center ">
      <div class="col-sm-8 col-lg-6 actions">
        <%= f.submit "募集を開始する", :class => "btn btn-dark btn-block" %>
      </div>
    </div>

      <% end %>
    </div>
  </div>
</div>