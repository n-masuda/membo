<style>

</style>

<main class="bg-dark ">
    <div class="container">
      <div class="img bg-transparent  d-flex align-items-center justify-content-around  p-3 rounded">
        <div class="card col-sm-6 bg-transparent">
            <%= image_tag @want.img.variant(resize_to_limit: [500, 500]) ,class:"me-3" if @want.img.attached?%>
        </div>
        <div class="card bg-mute col-sm-6 bg-transparent">
          <video src="<%= rails_blob_path(@want.movie) %>" type="video/mp4" controls></video>
        </div>
      </div>

      <div class="my-3 p-3 bg-white rounded shadow-sm">
        <div class="border-bottom pb-2 mb-0">
          <%= @want.title %>
        </div>
        <div class="d-flex text-muted pt-3">

          <div class="pb-3 mb-0 small lh-sm border-bottom">
            <strong class="d-block text-gray-dark">
              <%= @want.user.nickname %>
            </strong>
            <%= @want.text %>
          </div>
        </div>
        
        <div class="my-3 p-3 bg-white rounded shadow-sm">
          <div class="border-bottom pb-2 mb-0">
            <%= link_to "エントリー", new_want_entry_path(@want) %>
          </div>
          <% @want.entries.each do |entry|%>
            <%= link_to(want_entry_path(entry), class:"d-flex text-muted pt-3") do %>
              <div class="pb-3 mb-0 small lh-sm border-bottom w-100">
                <div class="d-flex justify-content-between">
                  <strong class="text-gray-dark d-block">
                    <%= entry.user.nickname %>
                  </strong>
                </div>
              <%= entry.text%>
            <% end %>
          <% end %>
        </div>
      </div>
        <small class="d-block text-end mt-3">
          <%= link_to "削除", want_path(@want), method: :delete, class:"btn btn-sm btn-outline-secondary" %>
        </small>
    </div>
  </div>
</main>
